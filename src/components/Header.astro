* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  background: #f8f9fa;
}

/* Modal */
.modal {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  display: flex;
  flex-wrap: wrap;
  background: white;
  width: 90%;
  max-width: 900px;
  border-radius: 10px;
  padding: 30px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  gap: 30px;
}

.contact-info {
  flex: 1;
  text-align: left;
}

.contact-info h2 {
  font-size: 28px;
  color: #333;
  margin-bottom: 20px;
}

.contact-info p {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 16px;
  margin-bottom: 10px;
}

.contact-info p span {
  font-size: 18px;
  color: #1f3d7a;
}

.newsletter input,
.newsletter button {
  display: block;
  width: 100%;
  margin-top: 10px;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.newsletter button {
  background: #1f3d7a;
  color: white;
  border: none;
  cursor: pointer;
}

.newsletter button:hover {
  background: #16305a;
}

/* Desna Sekcija: Kontakt Forma */
.contact-form {
  flex: 1;
}

.contact-form form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.contact-form input,
.contact-form textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
}

.contact-form button {
  padding: 10px;
  background-color: #1f3d7a;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background 0.3s;
}

.contact-form button:hover {
  background-color: #16305a;
}

.close {
  position: absolute;
  font-size: 12px;
  color: #8a8383;
  cursor: pointer; 
  top: 10px; 
  right: 15px; 
}

.close:hover {
  color: #333;
}

/* Responsive */
@media (max-width: 768px) {
  .modal-content {
    flex-direction: column;
  }
}

</style>
<script>
   // JavaScript za modal
  const modal = document.getElementById("modal");
  const openModalBtn = document.getElementById("openModal");
  const closeModalBtn = document.getElementById("closeModal");

  // Otvori modal
  openModalBtn?.addEventListener("click", () => {
    modal.style.display = "flex";
  });

  // Zatvori modal (klik na X)
  closeModalBtn?.addEventListener("click", () => {
    modal.style.display = "none";
  });

  // Zatvori modal klikom izvan sadr≈æaja
  window?.addEventListener("click", (e) => {
    if (e.target === modal) {
      modal.style.display = "none";
    }
  });

</script>
